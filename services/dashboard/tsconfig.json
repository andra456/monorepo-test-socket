{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./"
  },
  "include": [
    "./src/**/*",
    "../node_modules/@types",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
